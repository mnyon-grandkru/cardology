<body class = "body">
  <div class="widget_heading">
    <section id="widget_title"><%= source_cards_marketing_text 'purchaser', 'header' %></section>
    <section id="widget_instructions"><%= source_cards_marketing_text 'purchaser', 'subheader' %></section>
  </div>

  <%= form_for Birthday.new(:date => @date), :url => guidances_receive_reading_path do |birthday_form| %>
    <%= birthday_form.date_select :date, :start_year => 1900, :end_year => Time.now.year + 1, :order => [:month, :day, :year] %><br><br>
    <div onclick="startWobble()">
      <%= birthday_form.submit source_cards_marketing_text('purchaser', 'button') %>
    </div>
  <% end %>
  <div id="guidance_zone" class= "guidance_prompt_media" >
    <div class="prompt_zone">
      <%= image_tag (asset_path 'Low-Grey-Blue-RGB.jpg'), :class => 'source_cards_card_design' %>
    </div>
    <div class="prompt_zone">
      <%= image_tag (asset_path 'Low-Grey-Blue-RGB.jpg'), :class => 'source_cards_card_design' %>
    </div>
    <div class="prompt_zone">
      <%= image_tag (asset_path 'Low-Grey-Blue-RGB.jpg'), :class => 'source_cards_card_design' %>
    </div>
  </div>
</body>
<style>
  #guidance_prompt_media {
    justify-content: center;
  }
</style>
<script>
  function startWobble() {
    document.getElementById("guidance_zone").classList.add('wobble');
  }
</script>

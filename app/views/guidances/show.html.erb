<body class = "body">
  <%= clearleft %>
  <% unless params[:lookup_card].present?%>
    <div class="lookup_link">
      <%= link_to "Do Another Lookup", params[:prompt].present? ? "/guidances/prompt" : "/guidances/lookup_cards", id: 'new_lookup_link', class: 'lunar_navigation', method: :get %>
    </div>  <% end %>
  <%= clearboth %>
  <div class="widget_heading">
        <section id="widget_title_gui"><%= source_cards_marketing_text 'new_players', 'header1' %></section>
        <section id="widget_instructions">Click on each Source Card to flip it over!</section>
  </div>
  <div id = "guidance_zone" class= "guidance_show_media">
    <div  class="delivery_zone" id = "delivery_first" >
      <div class="panel" onclick="addheight()">
        <div class="front flip_card">
          <%= image_tag (asset_path 'blueorangeround-lowrez.png'), :class => 'source_cards_card_design' %>
         </div>
        <div class="back" id = "daily_card">
          <%=render "guidances/daily_card"%>
        </div>
      </div>
    </div>
    <div class="delivery_zone" id = "delivery_second">
      <div class="panel" onclick="addheight2()">
        <div class="front flip_card" >
            <%= image_tag (asset_path 'blueorangeround-lowrez.png'), :class => 'source_cards_card_design' %>
        </div>
        <div class="back" id="card52">
          <%=render "guidances/card52"%>
        </div>
      </div>
    </div>
     <div class="delivery_zone" id = "delivery_third">
        <div class="panel" onclick="addheight3()">
          <div class="front flip_card" id = "btn_zone">
              <%= image_tag (asset_path 'blueorangeround-lowrez.png'), :class => 'source_cards_card_design' %>
          </div>
          <div class="back" id= "card_year">
            <%=render "guidances/year_card"%>
          </div>
        </div>
      </div>
  </div>
</body>
<style>
</style>
<script>
  function addheight() {
    document.getElementById("delivery_first").classList.add('add_height');
    set_iframe_height();

  }
  function addheight2() {
    document.getElementById("delivery_second").classList.add('add_height');
    set_iframe_height();
  }
  function addheight3() {
    document.getElementById("delivery_third").classList.add('add_height');
    set_iframe_height();
  }

  function set_iframe_height(){
    if(window.innerWidth <= 768) {
      console.log(document.getElementById("personalReading"))
      document.getElementById("personalReading").style.height = '3900px'
    }
  }
</script>




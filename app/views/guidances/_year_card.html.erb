<% if params[:year] == nil%>
  <%@card = @birthday.card_for_this_year%>
  <%@date = DateTime.now%>
<%end%>
<div class="prompt_heading">
 <b>Yearly Theme Card</b>
</div>
<div class= "pane_guidance" >
    <div class = "constant">
      <div style = "text-align: center;">  
        <b style = "font-size: x-large;"><%=@card.name%></b>
      </div> 
       <%= marketing_text('heading','member' ,'yearly', 'subheader') %> 
      <p style="text-align: center;">
       <%= image_tag @card.image,class:"pad"%>
      </p>
    </div>
    <%@header = 'yearly'%>
     <%= render "guidances/carousel_reading" %>
  <% unless params[:lookup_card].present?%>
    <%if  params[:year] == "last"%>
      <div class = "button_daily_card">
        <%= link_to "See This Year's Card", guidances_year_card_path( :year => 'current'),:remote => true ,:class => 'lunar_navigation'%>
        <%= link_to "See Next Year's Card", guidances_year_card_path( :year => 'next'),:remote => true ,:class => 'lunar_navigation'%>
        <%= render partial: "copyright_text" %>
      </div>
      <%elsif params[:year] == "next"%>
      <div class = "button_daily_card">
      <%= link_to "See This Year's Card", guidances_year_card_path( :year => 'current'),:remote => true ,:class => 'lunar_navigation'%>
        <%= link_to "See Last Year's Card", guidances_year_card_path( :year => 'last'),:remote => true ,:class => 'lunar_navigation'%>
        <%= render partial: "copyright_text" %>
      </div>
      <%else%>
        <div class = "button_daily_card">
        <%= link_to "See Last Year's Card", guidances_year_card_path( :year => 'last'),:remote => true ,:class => 'lunar_navigation'%>
        <%= link_to "See Next Year's Card", guidances_year_card_path( :year => 'next'),:remote => true ,:class => 'lunar_navigation'%>
        <%= render partial: "copyright_text" %>
        </div>
      <%end%>
  <%else%>
    <div class = "button_daily_card">
      <h3 style= "text-align: center;">Want to see whatâ€™s in the cards for you next year?</h3>
      <%= link_to "Subscribe Below", "#",  class: "lunar_navigation", style: "font-size: 18px; pointer-events: none;" %>
      <%= render partial: "copyright_text" %>
    </div>
  <%end%>
    <%= javascript_include_tag 'carousel', 'data-turbolinks-track': 'reload' %>
</div>
<div class="prompt_heading mobile-tablet-only" style="margin-top: 10px;">
  <b><%= link_to "Subscribe To Read More Cards", learn_subscribe, target: :_blank, style: "text-align: center; font-size: 18px; text-decoration: none; color: white;" %></b>
</div> 
<div class="button_daily_card mobile-tablet-only">
    <%= link_to "Learn More And Subscribe", subscribe_read_cards, target: :_blank, class: "lunar_navigation", style: "font-size: 18px;" %>
</div>


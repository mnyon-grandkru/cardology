<body class="body">
  <div class="widget_heading">
    <section id="widget_title_gui"><%= source_cards_marketing_text 'subscriber', 'right_now', 'title' %></section>
    <section id="widget_instructions"><%= source_cards_marketing_text 'subscriber', 'right_now', 'technique' %></section>
  </div>
  <div id="guidance_zone" class="guidance_show_media">
    <div class="delivery_zone" id="delivery_first">
      <div class="boxpanel">
        <div class="surface-wrapper">
          <div class="alpha surface">
            <%= image_tag (asset_path 'Low-Grey-Blue-RGB.jpg'), :class => 'source_cards_card_design', :onclick => "rotateForward(180); return false;" %>
          </div>

          <div class="beta surface">
            <% @header = 'yesterday'
               @card = @birthday.card_for_yesterday @main_card
               @date = DateTime.yesterday %>
            <%= render "guidances/boxed_card", :params => {:day => 'yesterday', :personality => local_assigns[:personality], :zodiac => local_assigns[:zodiac]} %>
            <%#= image_tag @card.image_url, class: "reminder" %>
          </div>

          <div class="gamma surface">
            <% @card = @birthday.card_for_today @main_card
               @header = 'daily'
               @date = Date.current %>
            <%= render "guidances/boxed_card", :params => {:personality => local_assigns[:personality], :zodiac => local_assigns[:zodiac]} %>
            <%#= image_tag @card.image_url, class: "reminder" %>
          </div>

          <div class="delta surface">
            <% @card = @birthday.card_for_tomorrow @main_card
               @header = 'tomorrow'
               @date = DateTime.tomorrow %>
            <%= render "guidances/boxed_card", :params => {:day => 'tomorrow', :personality => local_assigns[:personality], :zodiac => local_assigns[:zodiac]} %>
            <%#= image_tag @card.image_url, class: "reminder" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

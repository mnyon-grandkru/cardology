<body class = "body">
  <div class="widget_heading">
    <section id="widget_title"><%= source_cards_marketing_text 'new_players', 'header' %></section>
    <section id="widget_instructions"><%= source_cards_marketing_text 'new_players', 'instructions' %></section>
  </div>

  <%= form_for Birthday.new(:date => @date), :remote => true, :url => guidances_show_path(prompt: true) do |birthday_form| %>
    <%= birthday_form.date_select :date, :start_year => 1900, :end_year => Time.now.year + 1, :order => [:month, :day, :year] %><br><br>
    <span class="reading_type_picker">
      <%= select_tag :reading_type, options_for_select(['Birth Card', 'Personality Card']) %>
    </span>
    <div onclick="startWobble()">
      <%= birthday_form.submit marketing_text('new_players', 'button2') %>
    </div>
  <% end %>
  <div id="guidance_zone" class= "guidance_prompt_media" >
    <div class="prompt_zone" >
      <%= image_tag (asset_path 'Low-Grey-Blue-RGB.jpg'), :class => 'source_cards_card_design' %>
    </div>
    <div class="prompt_zone" >
      <%= image_tag (asset_path 'Low-Grey-Blue-RGB.jpg'), :class => 'source_cards_card_design' %>
    </div>
    <div class="prompt_zone" >
      <%= image_tag (asset_path 'Low-Grey-Blue-RGB.jpg'), :class => 'source_cards_card_design' %>
    </div>
  </div>
</body>
<style>
  #guidance_prompt_media{
    justify-content: center;   
  }
</style>
<script>
  function startWobble() {
    document.getElementById("guidance_zone").classList.add('wobble');
  } 
</script>
